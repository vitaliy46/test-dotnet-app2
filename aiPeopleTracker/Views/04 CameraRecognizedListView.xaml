                                            </Grid>

                                        </Grid>

                                    </Button>

                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <!--<UniformGrid Rows="{Binding Path=RecognizedPersonsScope.RecognizedPeople.Count}" Columns="1" />-->
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>

